<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/T3"
    android:orientation="vertical">

    <View
        android:id="@+id/v_status_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/b2" />

    <RelativeLayout style="@style/TitleBarBgColorStylet">

        <TextView
            android:id="@+id/btn_back"
            style="@style/TitleBarBackStyle"
            android:text="取消" />

        <TextView
            style="@style/TitleBarTitleTextStyle"
            android:text="测试" />

        <TextView
            style="@style/TitleBarRightStyle"
            android:text="相册" />
    </RelativeLayout>

    <View style="@style/DividerStyle" />

    <RelativeLayout style="@style/TitleBarBgColorStylet">

        <ImageView style="@style/TitleBarBackWithOutTxtStyle" />

        <TextView
            style="@style/TitleBarTitleTextStyle"
            android:text="测试" />

        <ImageView
            style="@style/TitleBarRightStyle"
            android:src="@drawable/btn_white_back" />
    </RelativeLayout>

    <Button
        android:id="@+id/v_1"
        style="@style/ButtonDefaultStyle"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dp"
        android:elevation="16dp"
        android:onClick="onClick"
        android:text="点击弹框" />

    <Button
        style="@style/ButtonDefaultStyle"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="不可点击" />

    <Button
        android:id="@+id/v_2"
        style="@style/ButtonDefaultStyle"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="toast" />

    <Button
        style="@style/ButtonDefaultStyle"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="图片 不可点击" />


    <EditText
        android:id="@+id/ed_search"
        style="@style/SearchEdutTextDefaultStyle"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:hint="视频、文章、心情"
        android:text=""
        android:textSize="@dimen/sp_12" />


    <RelativeLayout
        style="@style/TitleBarBgColorStylet"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/v_left"
            style="@style/TitleBarBackWithOutTxtStyle" />

        <EditText
            style="@style/SearchEdutTextStyle"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignLeft="@+id/v_left"
            android:layout_alignRight="@+id/v_right"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:hint="视频、文章、心情"
            android:text=""
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/v_right"
            style="@style/TitleBarRightStyle"
            android:text="搜索" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/TitleBarBgColorStylet"
        android:layout_marginTop="20dp"
        android:background="@color/b1">

        <EditText
            style="@style/SearchEdutTextDefaultStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:hint="搜索"
            android:text=""
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</LinearLayout>