<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题栏 聊天设置 样式 -->
    <style name="CTitleBarBgColorStylet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 标题栏 返回按钮 左侧白色图片 样式 -->
    <style name="TitleBarBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/back</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableLeft">@drawable/btn_white_back</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <!--标题栏 标题文字 样式 -->
    <style name="TitleBarTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/T12</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 标题栏 右侧 图片或者文字 样式 -->
    <style name="TitleBarRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@drawable/default_text_click</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>